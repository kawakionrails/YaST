<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/appIconBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appIconImage"
            style="@style/Image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/icon_add" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/appName"
        style="@style/Text"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/appIconBackground"
        app:layout_constraintStart_toStartOf="@+id/appIconBackground"
        app:layout_constraintTop_toBottomOf="@+id/appIconBackground"
        tools:text="@string/lorem_ipsum"
        tools:textColor="@color/black" />
</androidx.constraintlayout.widget.ConstraintLayout>